{
  "compilerOptions": {
    "target": "es2024",
    "module": "es2022",
    "rootDir": "./src",
    "declaration": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["*/**/*.spec.ts"]
}
